{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": false,  // Disable strict mode
    "noImplicitAny": false,  // Allow implicit `any` type
    "skipLibCheck": true,  // Skip type checks for declaration files
    "allowJs": true,  // Allow JavaScript files
    "checkJs": false,  // Do not check JavaScript files
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/info.html"],  // Include both TS and JS files
  "exclude": ["node_modules"]
}
